
	<!--Main container start -->
	<main class="ttr-wrapper">
		<div class="container-fluid">
			<div class="db-breadcrumb">
				<h4 class="breadcrumb-title">Blogs</h4>
				<ul class="db-breadcrumb-list">
					<li><a href="#"><i class="fa fa-home"></i>Home</a></li>
					<li>Blogs</li>
				</ul>
			</div>
			<div class="row">
				<!-- Your Profile Views Chart -->
				
				<div class="col-lg-12 m-b30">
					<div class="widget-box">
						<div class="widget-inner">
							<table class="table">
                                <thead class="thead-dark">
                                  <tr>
                                    <th scope="col">#</th>
                                    <th scope="col">Image</th>
                                    <th scope="col">Blog Title</th>
                                    <th scope="col">Author Name</th>
                                    <!-- <th scope="col">Content</th>  -->
                                    <th scope="col">date</th>
                                    <th scope="col">Action</th>
                                  </tr>
                                </thead>
                                <tbody>
                                    <% for( let i = 0; i < student.length; i++ ) { %>
                                  <tr>
                                    <th scope="row"><%= i+1 %> </th>
                                    <td><img height="100" width="100" src="<%= student[i].blogImage %>" class="img-thumbnail"></td>
                                    <td><%= student[i].blogTitle %> </td>
                                    <td><%= student[i].blogAuthor %> </td>
                                    
                                    <td><%= student[i].blogPublishDate %> </td>
									<td> <a href="/admin/edit_blog/<%= student[i].id %> " ><span style="padding-left: 5px;" class="fa fa-pencil"></span></a>
                                        <a href="/admin/delete_blog/<%= student[i].id %> " ><span style="padding-left: 5px;" class="fa fa-trash"></span></a></td>
                                  
                                </tr>                                
                                </tbody>
                                <% } %>
                              </table>
						</div>
					</div>
				</div>
				<!-- Your Profile Views Chart END-->
			</div>
		</div>
	</main>


	<div class="ttr-overlay"></div>