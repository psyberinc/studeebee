<!--Main container start -->
<main class="ttr-wrapper">
	<div class="container-fluid">
		<div class="db-breadcrumb">
			<h4 class="breadcrumb-title">Edit Course video</h4>
			<ul class="db-breadcrumb-list">
				<li><a href="#"><i class="fa fa-home"></i>Home</a></li>
				<li>Edit Course video</li>
			</ul>
		</div>
		<div class="row">
			<!-- Your Profile Views Chart -->
			<div class="col-lg-12 m-b30">
				<div class="widget-box">
					<div class="widget-inner">
						<form class="edit-profile m-b30" method="POST"
							action="/admin/edit-module-video/<%=courseid %>/<%=moduleindex %>/<%=videoindex %>">
							<div class="row">
								<!-- Level 1: Basic Info -->
								<div class="col-12">
									<div class="ml-auto">
										<h3> Basic info</h3>
									</div>
								</div>
								<div class="form-group col-12">
									<label class="col-form-label">Title</label>
									<div>
										<input class="form-control" type="text"
											value="<%=course[moduleindex].sectionVideoTitle[videoindex] %> "
											name="title">
									</div>
								</div>
								<div class="form-group col-6">
									<label class="col-form-label">Duration (in Minutes)</label>
									<div>
										<input class="form-control" type="time"
											value="<%=course[moduleindex].videoDuration[videoindex] %> " name="duration"
											required>
									</div>
								</div>
								<div class="form-group col-12">
									<label class="col-form-label">Vide Type</label>
									<div>
										<select id="course_categroy" name="category" required>
											<option>Select Type</option>
											<option>Vimeo</option>
											<option>Youtube</option>
											<option>Other</option>
										</select>
									</div>
								</div>
								<div class="form-group col-12">
									<label class="col-form-label">Video Link</label>
									<div>
										<input class="form-control" type="text"
											value="<%=course[moduleindex].sectionVideoUrl[videoindex] %>"
											name="video_link">
									</div>
								</div>

								<div class="seperator"></div>

								<div class="col-12">

									<button type="submit" class="btn">Edit video</button>
								</div>
							</div>
						</form>
					</div>
				</div>
			</div>
			<!-- Your Profile Views Chart END-->
		</div>
	</div>
</main>
<!-- External JavaScripts -->



<div class="ttr-overlay"></div>