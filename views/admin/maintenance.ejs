<main class="ttr-wrapper">
    <div class="container-fluid">
        <div class="db-breadcrumb">
            <h4 class="breadcrumb-title">Maintenance</h4>
            <ul class="db-breadcrumb-list">
                <li><a href="#"><i class="fa fa-home"></i>Home</a></li>
                <li>Maintenance</li>
            </ul>
        </div>
        <div class="row">
            <!-- Your Profile Views Chart -->
            <div class="col-lg-12 m-b30">
                <div class="widget-box">
                    <div class="widget-inner">
                        <form class="edit-profile m-b30" action="/admin/maintenance" method="POST" >

                            <div class="col-12 m-t20">
                                <div class="ml-auto">
                                    <h3 class="m-form__section">Maintenance Mode </h3>
                                </div>
                            </div>
                            <div class="row">
                                <div class="form-group col-12">
                                    <label class="col-form-label">Title</label>
                                    <div>
                                        <input class="form-control" type="text" name="maintenance_title" value="Coming Soon!" required>
                                    </div>
                                </div>
                                <div class="seperator"></div>
                                <div class="form-group col-12">
                                    <label class="col-form-label">Description</label>
                                    <div>
                                        <textarea class="form-control" type="text" name="maintenance_description" value="Our website is under construction. We'll be here soon with our new awesome site." name="sitekey" required></textarea>
                                    </div>
                                </div>
                                <div class="form-group col-12">
                                    <label class="col-form-label">Status</label>
                                    <div class="row">
                                        <div class="col-3">
                                            <label class="col-form-label">Enable</label>
                                            <input type="radio" id="optionA" name="enable">
                                        </div>
                                        <div class="col-3">
                                            <label class="col-form-label">Disable</label>
                                            <input type="radio" id="optionA" name="disable">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-12">
                                    <button type="submit" class="btn-secondry add-item m-r5"><i
                                    class="fa fa-fw fa-plus-circle"></i>&nbsp;Save Changes</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
            <!-- Your Profile Views Chart END-->
        </div>
    </div>
</main>
