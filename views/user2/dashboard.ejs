<main class="ttr-wrapper">
    <div class="container-fluid">
        <div class="db-breadcrumb">
            <h4 class="breadcrumb-title">Dashboard</h4>
            <ul class="db-breadcrumb-list">
                <li><a href="/"><i class="fa fa-home"></i>Home</a></li>
                <li>Dashboard</li>
            </ul>
        </div>
        <!-- Card -->
        <div class="wc-title">
            <h4 style="font-weight: 300;">Continue Course</h4>
        </div>

        <div class="widget-inner">
            
            <div class="card-courses-list admin-courses">
                <div class="card-courses-media">
                    <img src="/uploads/<%=course[0].thumbnail%>" alt=""/>
                </div>
                
                <div class="card-courses-full-dec">
                    <div class="card-courses-title">
                        <h4><%=course[0].title%></h4>
                    </div>
                    <div class="card-courses-list-bx">
                        <ul class="card-courses-view">
                            <li class="card-courses-user">
                                <div class="card-courses-user-pic">
                                    <img src="/admin/assets/images/testimonials/pic3.jpg" alt="" />
                                </div>
                                <div class="card-courses-user-info">
                                    <h5>Teacher</h5>
                                    <h4><%=course[0].instructor%></h4>
                                </div>
                            </li>
                            <li class="card-courses-categories">
                                <h5>3 Categories</h5>
                                <h4><%=course[0].category%></h4>
                            </li>
                            <li class="card-courses-review">
                                <h5>4 Review</h5>
                                <ul class="cours-star">
                                    <li class="active"><i class="fa fa-star"></i></li>
                                    <li class="active"><i class="fa fa-star"></i></li>
                                    <li class="active"><i class="fa fa-star"></i></li>
                                    <li><i class="fa fa-star"></i></li>
                                    <li><i class="fa fa-star"></i></li>
                                </ul>
                            </li>
                            <li class="card-courses-stats">
                                <a href="#" class="btn button-sm green radius-xl">Incomplete</a>
                            </li>
                        </ul>
                    </div>
                    <div class="row card-courses-dec">
                        <div class="col-md-12">
                            <h6 class="m-b10">Course Description</h6>
                            <p><%=course[0].description%></p>
                        </div>
                        <div class="col-md-12">
                            <a href="#" class="btn green radius-xl outline">Go To Course</a>
                        </div>
                    </div>
                </div>
            </div>
           
        </div>
        <!-- Card END -->

        <!-- Recommended Courses -->
        <div class="wc-title">
            <br><br>
            <h4>Recommended Course</h4>
            <br>
        </div>
        <div class="row">
            <div class="courses-carousel owl-carousel owl-btn-1 col-12 p-lr0">    
                <%course.forEach((item)=>{%>     
                <div class="item">
                    
                    <div class="cours-bx">
                        <div class="action-box">
                            <img src="/uploads/<%=item.thumbnail%>" alt="">
                            <a href="/courses/<%=(item.title).trim().toLowerCase().replace(/ /g,'-')%>/<%=item._id%>" class="btn">Read More</a>
                        </div>
                        <div class="info-bx text-center">
                            <h5><a href="/courses/<%=(item.title).trim().toLowerCase().replace(/ /g,'-')%>/<%=item._id%>"><%=(item.title)%></a></h5>
                            <span><%=(item.category)%></span>
                        </div>
                        <div class="cours-more-info">
                            <div class="review">
                                <span>3 Review</span>
                                <ul class="cours-star">
                                    <li class="active"><i class="fa fa-star"></i></li>
                                    <li class="active"><i class="fa fa-star"></i></li>
                                    <li class="active"><i class="fa fa-star"></i></li>
                                    <li><i class="fa fa-star"></i></li>
                                    <li><i class="fa fa-star"></i></li>
                                </ul>
                            </div>
                            <div class="price">
                                <%if(item.discount !== 0){%>
                                <del><%=item.price%></del>
                                <%}%>
                                <h5><%=Math.floor(item.price - (item.discount / 100) * item.price)%></h5>
                            </div>
                        </div>
                    </div>
                   
                </div>
               
                <%})%>
            </div>
        </div>
    </div>
</main>